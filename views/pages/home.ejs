<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CS-546 Final Project</title>

    <!-- Bootstrap -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/style.css">
    
</head>

<body>
    <div class="container">
        <div class="ex">
            <h1 id="header"></h1>
            <h2 class="text-center"><font size="9">Welcome to music wall</font></h2>
            <br/>
            <p class="text-center"><font size="5">Using the music-wall to make your party amazing</font></p>
        </div>
        <div id="createParty">
            <div class="form-horizontal" action="/createParty" method="GET">
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                            Create Party
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>





    <div class="modal fade " id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog vertical-align-center" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h3 class="modal-title" id="myModalLabel">Welcome, Party Lovers!</h3>
                    </div>
                    <div class="modal-body">

                        <section class="col-lg-offset-1 ">

                            <form class="form-horizontal" role="form" id="form1" action="/login" method="POST">
                                <div class="row">
                                    <h3>Login</h3></div>
                                <div class="form-group">
                                    <label for="loginname" class="col-lg-2 control-label">Username</label>
                                    <div class="col-lg-4">
                                        <input class="form-control" name='loginname' placeholder="Letter Number only" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="loginpw" class="col-lg-2 control-label">Password</label>
                                    <div class="col-lg-4">
                                        <input class="form-control" type="password" name='loginpw' placeholder="Letter Number only" />
                                    </div>
                                </div>
                                <% if (error) { %>
                                    <div class="alert alert-danger" role="alert">
                                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                        <span class="sr-only">Error:</span>
                                        <%= error %>
                                    </div>
                                    <% } %>
                                        <div class="form-group">
                                            <div class="col-lg-offset-2 col-lg-10">
                                                <button type="button" class="btn btn-primary" id="button1">Log in</button>
                                            </div>
                                        </div>
                            </form>
                        </section>
<br><br>
                        <section class="col-lg-offset-1 ">


                            <form class="form-horizontal" id="form2">
                                <h3 class="row">New Member? Join us! </h3>
                                <div class="form-group">
                                    <label for="username" class="col-lg-2 control-label">Username</label>
                                    <div class="col-lg-4">
                                        <input class="form-control" name='username' placeholder="Letter Number only" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="col-lg-2 control-label">Password</label>
                                    <div class="col-lg-4">
                                        <input class="form-control" type="password" name='password' placeholder="Letter Number only" />
                                    </div>
                                </div>
                                <% if (error) { %>
                                    <div class="alert alert-danger" role="alert">
                                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                        <span class="sr-only">Error:</span>
                                        <%= error %>
                                    </div>
                                    <% } %>
                                        <div class="form-group">
                                            <div class="col-lg-offset-2 col-lg-10">
                                                <button type="button" class="btn btn-primary" id="button2">Sign up</button>
                                            </div>
                                        </div>
                            </form>
                        </section>
                        <br>
                    </div>

                </div>
            </div>
        </div>
    </div>










    <div class="home">
        <footer class="text-center">
            <h4><font size="6">cs546 final project</font></h4>
        </footer>
    </div>
  
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script>
        if (!window.jQuery) {
            document.write('<script src="../assets/js/jquery-1.12.1.js"><\/script>');
        }
    </script>
    <script src="../assets/js/bootstrap.min.js"></script>
    <script src="../assets/js/underscore-min.js"></script>
    <script src="../assets/validators.js"></script>

    
</body>

</html>